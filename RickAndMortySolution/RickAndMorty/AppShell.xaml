<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RickAndMorty.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:RickAndMorty.Views"
    FlyoutHeaderBehavior="CollapseOnScroll">

    <ShellContent Title="Home" ContentTemplate="{DataTemplate pages:MainPage}" Route="MainPage" />
    <ShellContent Title="Characters" ContentTemplate="{DataTemplate pages:CharacterPage}" Route="CharacterPage" />
    <ShellContent Title="Details" ContentTemplate="{DataTemplate pages:DetailsCharacterPage}" Route="DetailsCharacterPage" />

</Shell>
